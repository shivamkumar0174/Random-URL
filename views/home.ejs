</head>
<body>
    <div id="container">
        <a href="https://github.com/shivamkumar0174"><i class="fa-brands fa-github"></i></a>
        <a href="/logout" id="signout">Sign-Out</a>
    <h1>URL-SHORTNER</h1>
    <p>Use this tool to create short, easy-to-share links.</p>
    <%if (locals.id){ %>
        <a href="/" id="back-button"> < Back</a>
        <p>URL Generated:<span> http://localhost:8001/<%= id %></span> </p>
        <% } %>
    <div>
        <form method="POST" action="/url">
            <label>Enter your Original URL</label>
            <input type="text"
             name="url"
             placeholder="https//example.com">
             <button type="submit">Generate</button>
        </form>
    </div>
    <div id="urls">
        <% if (locals.urls) { %>
            <table>
                <thead id="th">
                    <th>S.No</th>
                    <th>ShortId</th>
                    <th>Redirect</th>
                    <th>Clicks</th>
                </thead>
                <tbody>
                    <% urls.forEach((url,index) => { %>
                        <tr>
                     <td><%= index+1 %> </td>
                     <td><%= `http://localhost:8001/${url.shortId}` %></td>
                     <td ><%= url.redirectUrl%></td>
                     <td id="clicks"><%= url.visitHistory.length %></td>
                    </tr>
                    <% })%>
                </tbody>
            </table>
        <% } %>
    </div>
</div>
